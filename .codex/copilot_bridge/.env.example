# Bridge bind/port
BRIDGE_BIND=127.0.0.1
BRIDGE_PORT=7777

# Defaults
DEFAULT_CWD=/srv/copilot-bridge/repo
DEFAULT_TIMEOUT_MS=600000

# Tooling policy (deny-by-default beyond allowed set)
ALLOW_ALL_TOOLS=false
DEFAULT_ALLOW_TOOLS=shell,git,gh,write
DEFAULT_DENY_TOOLS=shell(rm),shell(sudo),shell(dd),shell(curl -X POST),shell(wget),shell(docker push)

# Paths (default to .codex/copilot_bridge/var within the project)
LOG_DIR=./var/logs
MANIFEST_DIR=./var/manifests

