# Prevent stub packages and local artifacts from shipping in sdists/wheels
# This file is additive and safe to apply on any branch.
#
# Include key top-level docs
include README.md
include LICENSE
include LICENSES/LICENSE
recursive-include LICENSES *

# Package source layout (src/ + selected top-level packages)
graft src
graft training
graft tokenization
graft codex_utils
graft interfaces
graft tools
graft codex_addons
graft codex_digest
graft hhg_logistics

# Include templates and docs in sdist (wheel install paths may not use these at runtime)
graft templates
graft docs

# Exclude test-time stub packages explicitly
prune tests/stub_packages
recursive-exclude tests/stub_packages *

# Guard against accidental inclusion of top-level stubs (e.g., a "torch/" shim)
prune torch
recursive-exclude torch *

# Exclude local audit artifacts and reports from distributions
prune audit_artifacts
prune reports
exclude audit_run_manifest.json

# Generic hygiene
global-exclude *.py[cod]
global-exclude __pycache__/*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude *.egg-info/*

# Keep VCS and CI noise out
prune .git
prune .github
