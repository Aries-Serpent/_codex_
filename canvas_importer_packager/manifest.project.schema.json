{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatGPT Project Manifest (Table of Contents)",
  "type": "object",
  "properties": {
    "sources": {
      "type": "array",
      "description": "List of source files and their panel chunks (for project integration).",
      "items": {
        "type": "object",
        "properties": {
          "path": {"type": "string", "description": "Original file path."},
          "panels": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List of panel filenames corresponding to the file, in order."
          }
        },
        "required": ["path", "panels"]
      }
    }
  },
  "required": ["sources"]
}
