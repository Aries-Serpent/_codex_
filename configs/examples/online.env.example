# Online enrichment is OFF by default
CODEX_NET_MODE=offline

# Enable online read-only connectors (opt-in)
CODEX_NET_MODE=online_allowlist
CODEX_ALLOWLIST_HOSTS=api.github.com
GITHUB_API_BASE=https://api.github.com

# GitHub App (preferred)
GITHUB_APP_ID=123456
GITHUB_APP_INSTALLATION_ID=987654
# Choose one:
# GITHUB_APP_PRIVATE_KEY_PATH=/secure/github-app.pem
# GITHUB_APP_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Runner (optional)
GITHUB_RUNNER_VERSION=2.317.0

# ChatGPT / OpenAI (optional, for Codex features)
OPENAI_API_KEY=sk-your-key